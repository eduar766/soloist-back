# Production Environment Variables
# Copy this file to .env.prod and fill in actual values

# Environment
ENVIRONMENT=production
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database - Use managed database service in production
DATABASE_URL=postgresql://user:password@your-db-host:5432/your-db-name

# Supabase Configuration (if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Redis (for caching and rate limiting)
REDIS_URL=redis://redis:6379
# For managed Redis service:
# REDIS_URL=redis://user:password@your-redis-host:6379

# Email Service (SendGrid, AWS SES, etc.)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# File Storage
STORAGE_BACKEND=supabase
# For AWS S3:
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_BUCKET_NAME=your-s3-bucket
# AWS_REGION=us-east-1

# API Configuration
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://redis:6379

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# SSL/TLS (if handling certificates in app)
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Health Check
HEALTH_CHECK_ENABLED=true

# Performance
WORKER_COUNT=4
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=65

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,gif

# Backup and Maintenance
BACKUP_ENABLED=true
MAINTENANCE_MODE=false

# Feature Flags
FEATURE_PDF_GENERATION=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REAL_TIME_UPDATES=true

# Third-party Integrations
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Domain and URLs
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
WEBHOOK_URL=https://api.yourdomain.com/webhooks